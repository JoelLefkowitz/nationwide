{
  "compilerOptions": {
    "outDir": "../dist",
    "target": "es5", // Compile for npm.
    "module": "CommonJS", // Support ts-node invocations.
    "moduleResolution": "node", // Mimic the Node.js run-time resolution strategy.
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": ["./**/*.spec.ts"]
}
